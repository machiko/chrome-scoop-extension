{
  "manifest_version": 2,
  "name": "新聞真實性辨識",
  "description": "協助判別新聞思考",
  "version": "1.0",
  "browser_action": {
  },
  "icons":
  {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js",
        "js/commandsListener.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "*://reyes.me/api/*",
    "*://*.news.yahoo.com/*",
    "*://www.peoplenews.tw/*",
    "*://www.commonhealth.com.tw/*",
    "*://theinitium.com/*",
    "*://www.setn.com/*",
    "*://www.appledaily.com.tw/*",
    "*://news.tvbs.com.tw/*",
    "*://www.storm.mg/*"
  ],
  "content_scripts" : [
    {
      "matches" : [
        "*://*.news.yahoo.com/*",
        "*://www.peoplenews.tw/*",
        "*://www.commonhealth.com.tw/*",
        "*://theinitium.com/*",
        "*://www.setn.com/*",
        "*://www.appledaily.com.tw/*",
        "*://news.tvbs.com.tw/*",
        "*://www.storm.mg/*"
      ],
      "js" : [
        "js/jquery-1.11.0.min.js",
        "js/noty/packaged/jquery.noty.packaged.min.js",
        "js/contentscript.js"
      ],
      "css" : [
        "css/buttons.css",
        "css/animate.css",
        "css/font-awesome/css/font-awesome.min.css"
      ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "commands" : {
    "reload_extension" : {
      "suggested_key" : {
        "default" : "Ctrl+Shift+Q",
        "windows" : "Ctrl+Shift+Q",
        "mac" : "MacCtrl+Shift+Q",
        "chromeos" : "Ctrl+Shift+Q",
        "linux" : "Ctrl+Shift+Q"
      },
      "description" : "shortcut for reloading extensions"
    }
  }
}
